<table class='admin'>
  <thead><h1 class='header'><%= (!content.empty?)? content.first.class.to_s.pluralize : 'Empty' %></h1></thead>
  <tr>
    <th>Title</th>
    <th>Short Description</th>
    <th>Url</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% content.each do |i| %>
    <tr>
      <td id='<%= "#{i.id}-title" %>'><%= i.title %></td>
      <td id='<%= "#{i.id}-short-description" %>'><%= i.short_description %></td>
      <td id='<%= "#{i.id}-url" %>'><%= i.url %></td>
      <td id='<%= "#{i.id}-edit" %>'><button class="edit" data-controller="<%= i.class.to_s.downcase.pluralize %>" data-model="<%= i.class %>" data-instance="<%= i.id %>">edit</button></td>
      <td id='<%= "#{i.id}-delete" %>'><button class="delete" data-controller="<%= i.class.to_s.downcase.pluralize %>" data-model="<%= i.class %>" data-instance="<%= i.id %>">delete</button></td>
    </tr>
  <% end %>
  <tr>
    <td><button class="new" data-model="<%= content.first.class %>">Add</button></td>
  </tr>
</table>